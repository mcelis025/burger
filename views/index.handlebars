<h1>Burgers!</h1>

<h2>Your Burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
{{!--     {{> cats/cat-block sleep=true}}
 --}}    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burger</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
{{!--     {{> cats/cat-block sleep=false}}
 --}}    {{/if}}
    {{/each}}
</ul>

<h2>Create a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca"></label>
        <input type="text" id="ca" name="name">
    </div>
    <br>
    <button type="submit">Submit Order</button>
</form>