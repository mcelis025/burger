<div>
    <p id="title">Burgers Galore!</p>
    <img src="/assets/img/burger.png" id="burg">
</div>

<div class="notDevoured">
    <h2>Your Burgers</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="devoured">
    <h2>Devoured Burgers</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>

<div class="createBurger">
    <h2>Create a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name">
        </div>
        <br>
        <button type="submit">Submit Order</button>
    </form>
</div>